# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Admin User IDs (comma-separated)
# These users bypass rate limits and can use admin commands
# To get your user ID, message @userinfobot on Telegram
ADMIN_USER_IDS=123456789,987654321

# Database Path
# Path to the SQLite database (default: ../go-3gpp-scanner/bin/database.db)
DB_PATH=../go-3gpp-scanner/bin/database.db

# Rate Limiting (per user)
# Maximum queries per minute
MAX_QUERIES_PER_MINUTE=10
# Maximum queries per hour
MAX_QUERIES_PER_HOUR=50

# DNS Resolution Settings
# Timeout for DNS queries in seconds
DNS_RESOLUTION_TIMEOUT=5
# Number of concurrent DNS resolution workers
DNS_CONCURRENT_WORKERS=10

# Pagination Settings
# Maximum operators to show per page
MAX_OPERATORS_PER_PAGE=5
# Maximum FQDNs to show per operator
MAX_FQDNS_PER_OPERATOR=10

# Logging
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log file path
LOG_FILE=bot.log

# Data Files
# Path to MCC-MNC JSON list
MCC_MNC_JSON_PATH=../epdg/mcc-mnc-list.json
